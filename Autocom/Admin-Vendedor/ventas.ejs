<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Ventas del vendedor</title>
</head>

<body>
    <header><!--navbar-->
        <img id="logo" src="./logoAutocom.png" alt="logo">
        <div> <!-- Imagen de perfil -->
            <img id="avatar" src="./1.png" alt="avatar">
        </div>
    </header>
    <main>
        <div id="CloseButtonContainer">
            <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="window.location.reload()"
                aria-label="Close" style="color: red;"></button>
        </div>
        <!--Datos del vendedor-->
        <div id="DataContainer">

            <p class="employeeData">ID del empleado: <span>data</span></p>
            <p class="employeeData">Nombre del empleado:<span>data</span> </p>
            <p class="employeeData">Apellidos:<span>data</span> </p>
            <p class="employeeData">Nombre de usuario:<span>data</span> </p>
            <p class="employeeData">Contraseña:<span>data</span> </p>
        </div>

        <div id="SalesContainer"><!--Contenedor cards-->
            <div id="SalesHeader"><!--Header-->
                <h3>Ventas</h3>
                <!--Barra de busqueda-->
                <input type="text" placeholder="Busca alguna venta">
            </div>
            <div class="container">
                <div class="row">
                    <% if (!Array.isArray(reservas) || reservas.length===0) { %>
                        <p>No se encontraron reservas.</p>
                        <% } else { %>
                            <% reservas.forEach(reserva=> { %>
                                <div class="col-md-4">
                                    <div class="card">
                                        <img src="<%= reserva.ImagenVehiculo %>"
                                            alt="<%= reserva.Marca %> <%= reserva.Modelo %>">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= reserva.Marca %>
                                                    <%= reserva.Modelo %>
                                            </h5>
                                            <p class="card-text">Año: <%= reserva.Año %>
                                            </p>
                                            <p class="card-text">Kilometraje: <%= reserva.Kilometraje %> km</p>
                                            <p class="card-text">Tipo: <%= reserva.TipoVehiculo %>
                                            </p>
                                            <p class="card-text price">Precio: $<%= reserva.Precio %>
                                            </p>
                                            <p class="card-text">Fecha de Venta: <%= new
                                                    Date(reserva.FechaVenta).toLocaleDateString() %>
                                            </p>
                                            <a href="/generarTicketReserva?idReserva=<%= reserva.idReserva %>"
                                                class="btn btn-secondary">Ver detalles de reserva</a>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } %>
                </div>
            </div>
        </div>
    </main>
</body>
<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;

        img#logo {
            width: 150px;
            height: auto;
        }

        img#avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

    }

    main {
        padding: 2rem;
    }

    #CloseButtonContainer {
        display: flex;
        justify-content: flex-end;
        padding: 10px;
    }

    #DataContainer {
        padding: 10px;
        margin-bottom: 1rem;
    }

    p {
        margin: 0;
        font-weight: bold;
        color: #767676;
        font-size: 1.5rem;

        span {
            color: black;
        }
    }

    #SalesContainer {
        background-color: #EAEAEA;
        padding: 10px;
        border-radius: 5px;
        ;

        h3 {
            margin: 0;
            font-weight: bold;
        }

        input {
            width: 100%;
            padding: 5px;
            margin: 10px 0;
        }

        #SalesHeader {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #D9D9D9;
            padding: 10px;
            margin-bottom: 1rem;

            input {
                width: 30%;
                border-radius: 4px;
                border: none
            }

            ;

            input::placeholder {
                font-weight: bold;
            }
        }

        #SalesCardsContainer {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 10px;

            #cardExample {
                background-color: white;
                padding: 10px;
                border-radius: 5px;
                width: 300px;
                height: 400px;
            }
        }

        .card {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card img {
            width: 100%;
        }

        .price {
            color: red;
            font-weight: bold;
        }

    }
</style>

</html>